
<h4>商品詳細</h4>


<div class="col-md-8 offset-md-1">
     <div class="row">
      <h3 class="title">商品詳細</h3>
    </div>


    <table class="table">
  <div class="form-group">
  　　<tr>
  　　<td>商品名</td>
  　　<td><%= @item.name %></td>
  　　</tr>

  　<tr>
  　　<td>商品説明</td>
  　　<td><%= @item.introduction %></td>
  　</tr>
  　<tr>
  　　<td>ジャンル</td>
  　　<td><%= @item.genre_id %></td>
 　　</tr>
 　　<tr>
  　　<td>税込価格</td>
  　　<td><%= "#{(@item.price * 110 / 100).to_s(:delimited)}（#{@item.price.to_s(:delimited)}）" %>円
  　　</td>
  　　</tr>

  　</div>
   </table>

    <%=link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>

  </div>






