<div class="col-md-8 offset-md-1">
     <div class="row">
      <h3 class="title">商品編集</h3>
    </div>

    <%= form_with model: @item, url: admin_item_path(@item), local:true do |f| %>
    <table class="table">
  	 <tr>
  	     
<table class="table">
  <div class="form-group">
        <label for="Image">商品画像</label>
        <%= f.attachment_field :item_image, placeholder: "商品画像" %>
  </div>

  <div class="form-group">
    <label for="item_name">商品名</label>
      <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <label for="item_Introduction">商品説明</label>
      <%= f.text_area :introduction %>
  </div>
  
　<div class="form-group">
　  <label for="item_genre_id">ジャンル</label>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
　</div>
  
  
   <div class="form-group">
    <label for="item_price">税抜価格</label>
      <%= f.text_field :price %>
  </div>
  
  <div class="form-group">
     <label for="item_is_active">販売ステータス</label>
   　<%= f.radio_button :is_active, true %>販売中
  　 <%= f.radio_button :is_active, false %>販売停止中
  </div>
      
      
    <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
   <% end %>
   </td>



</div>