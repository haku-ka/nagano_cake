

 <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <table class="table">

  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
				<% @items.each do |item| %>
				  <p>商品名</p>
				  <td><%= item.image_id %></td>

				  <td><%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
            </td>

          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td><%= item.is_active %></td>
				<% end %>
      </tr>
  </tbody>

      <div class="new-item-link text-right">
      <%= link_to "＋", new_admin_item_path, class: "btn btn-primary" %>
    </div>


</table>

    </div>