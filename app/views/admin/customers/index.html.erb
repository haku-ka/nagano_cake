	<div class="col-md-8 offset-md-1">
      <h2>会員一覧</h2>
      <table class="table">

  <thead>
    <tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
      		<th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
				<% @customers.each do |customer| %>
				  <td><$= customer.id %></td>
				  <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active %></td>
				<% end %>
      </tr>
  </tbody>
    </div>


</table>

    </div>