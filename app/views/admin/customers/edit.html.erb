
<div class="container">
	<div class="row">
		<h3 class="title">さんの会員情報編集</h3>
　</div>

<div class="col-md-8 offset-md-1">
     <div class="row">
      <h3 class="title"><%= customer.first_name %>さんの会員情報編集</h3>
    </div>

    <%= form_with model: @customer, url: admin_customer_path(@customer), local:true do |f| %>
    <table class="table">
  	 <tr>

<table class="table">
  <div class="form-group">
        <label for="customer_Id">会員ID</label>
        <td><%= @customer.id %></td>
  </div>

  <div class="form-group">
    <label for="customer_First_name">氏名</label>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
  </div>

    <div class="form-group">
    <label for="customer_First_name_kana">フリガナ</label>
      <%= f.text_field :first_name_kana %>
      <%= f.text_field :last_name_kana %>
  </div>


  <div class="form-group">
    <label for="customer_Postal_code">郵便番号</label>
      <%= f.text_field :postal_code %>
  </div>

　<div class="form-group">
　  <label for="customer_Address">住所</label>
      <%= f.text_field :address %>
　</div>

     <div class="form-group">
    <label for="customer_Telephone_number">電話番号</label>
      <%= f.text_field :telephone_number %>
  </div>

  　<div class="form-group">
　  <label for="customer_Email">メールアドレス</label>
      <%= f.text_field :email %>
　</div>

  <div class="form-group">
     <label for="customer_is_active">会員ステータス</label>
   　<%= f.radio_button :is_active, true %>有効
  　 <%= f.radio_button :is_active, false %>大会
  </div>

    <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
   <% end %>
   </td>
　</div>
</div>